<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaction.TransactionFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_bubble"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:translationY="-550dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="275dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="30sp"
        android:elevation="10dp"
        android:gravity="center"
        android:textColor="@color/colorFont"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:tabGravity="fill"
        android:background="@android:color/transparent"
        app:tabMode="fixed"
        app:tabIndicator="@null"
        app:tabTextColor="@color/colorFont"
        app:tabIconTint="@color/colorFont"
        app:tabInlineLabel="true"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/date_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/expense"
            android:icon="@drawable/ic_minus_box_white_24dp"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/income"
            android:icon="@drawable/ic_add_box_white_24dp"/>

        <com.google.android.material.tabs.TabItem
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/transfer"
            android:icon="@drawable/ic_transfer_white_24dp"/>

    </com.google.android.material.tabs.TabLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/header_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="250dp"
        android:orientation="horizontal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/from_group_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="From Group"
        app:layout_constraintTop_toBottomOf="@id/header_guideline"
        app:layout_constraintStart_toStartOf="parent">

        <AutoCompleteTextView
            android:id="@+id/from_group_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>